{
  "compilerOptions": {

    "target": "es2021",
    "lib": ["es2021"],
    /* Modules */
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules","**/*/test.ts"]
}
